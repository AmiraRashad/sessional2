extends ../layout

block content
    h1 Add Course
    form(action="/router/courses/", method="post")
            div.form-group
                label(for="name") Enter Course Name
                input#name(type="text", class="form-control",name="name")
            div.form-group
                label(for="id") Enter Course ID
                input#id(type="text", class="form-control",name="course_id")
            div.form-group
                label(for="duration") Enter Course Duration
                input#duration(type="number", class="form-control",name="duration")
            div.form-group
                label(for="fee") Enter Course Fee
                input#fee(type="number", class="form-control",name="fee")
            input(type="submit",class="btn btn-waring mt-4")