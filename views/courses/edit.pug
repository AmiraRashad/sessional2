extends ../layout

block content
    h1 Edit Course
    form(action="/router/courses/edit/"+course._id, method="post")
            div.form-group
                label(for="name") Enter Course Name
                input#name(type="text", class="form-control",name="name", value=course.course_name)
            div.form-group
                label(for="id") Enter Course ID
                input#id(type="text", class="form-control",name="course_id",value=course.course_id)
            div.form-group
                label(for="duration") Enter Course Duration
                input#duration(type="number", class="form-control",name="duration",value=course.course_duration)
            div.form-group
                label(for="fee") Enter Course Fee
                input#fee(type="number", class="form-control",name="fee",value=course.course_fee)
            input(type="submit",style="margin-left:50%",class="btn btn-outline-info")