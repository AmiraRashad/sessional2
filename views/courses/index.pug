extends ../layout

block content
  a(href="/router/courses/add",class="btn btn-success float-right") Create New
  table.table
    thead
        tr
            th Course Name
            th Course Id
            th Course Duration
            th Course Fee
    tbody
        each item in courses
            tr
                td=item.course_name
                td=item.course_id
                td=item.course_duration
                td=item.course_fee
                td
                    a(href="/router/courses/edit/"+item._id,class="btn btn-outline-warning btn-sm mx-2") Edit
                    a(href="/router/courses/delete/"+item._id,class="btn btn-outline-danger btn-sm") Delete